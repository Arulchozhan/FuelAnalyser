<Window x:Class="PaeoniaTechSpectroMeter.Views.MessageBoxInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaeoniaTechSpectroMeter.Views"
        mc:Ignorable="d"
        Height="200" Width="600" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20">
            <Image Source="C:\FuelAnalyzer\bin\Icon\Info_Icon.png" Width="20" Height="20" Margin="0,0,5,0"/>
            <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20" TextWrapping="Wrap" Text="{Binding Message}"  Style="{StaticResource MessageBoxInfoTextBlockStyle}" />
        </StackPanel>
        <Grid VerticalAlignment="Bottom" Background="#f3f3f3" Height="80">
            <Button Content="OK" Width="100" Style="{StaticResource CustomMessageBoxButtonStyle}"  HorizontalAlignment="Right" Margin="0,0,20,0" Click="ButtonOK_Click"/>
        </Grid>
    </Grid>
</Window>
