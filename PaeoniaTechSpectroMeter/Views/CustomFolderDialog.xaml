<Window x:Class="PaeoniaTechSpectroMeter.Views.CustomFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaeoniaTechSpectroMeter.Views"
        mc:Ignorable="d"
        Title="CustomFolderDialog" Height="800" Width="800">
    <Grid>
        <TreeView Name="folderTreeView" Margin="10" SelectedItemChanged="FolderTreeView_SelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubFolders}">
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button Content="Select Folder" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="SelectFolder_Click"/>
    </Grid>
</Window>
